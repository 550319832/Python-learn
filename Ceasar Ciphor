alphabet=['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']

direction = input("Type 'encode' to encrypt,type 'decode' to decrypt:\n").lower()
text= input("Type your message:\n").lower()
shift=int(input("Type the shift number:\n"))

def encrypt(original_text,shift_amount):
    encrypt =""
    for i in original_text:
        position=alphabet.index(i)
        shift_position= (int(position)+shift_amount)
        shift_position %= len(alphabet)
        encrypt+=alphabet[shift_position]
    print(f"Here is the encoded result: {encrypt}")
    
def decrypt(original_text,shift_amount):
    decrypt =""
    for i in original_text:
        position=alphabet.index(i)
        shift_position= (int(position)-shift_amount)
        shift_position %= len(alphabet)
        decrypt+=alphabet[shift_position]
    print(f"Here is the decoded result: {decrypt}")

if direction =="encode":    
    encrypt(text,shift)
elif direction =="decode":
    decrypt(text,shift)
else:
    print("Invalid direction. please type 'encode' or 'decode'")



        
